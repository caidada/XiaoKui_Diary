<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:draft_card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draft_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="4dp"
    app:contentPadding="10dp"
    draft_card:cardBackgroundColor="@color/QI_background_black"
    draft_card:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="我是一个标题"
            android:textColor="@color/QI_main_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView18"
            android:layout_marginTop="5dp"
            android:text="17/10/21"
            android:textColor="@color/dark_blue"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView19"
            android:layout_alignBottom="@+id/textView19"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/textView19"
            android:text="是非成败转头空，青山依旧在，惯惯惯惯惯..."
            android:textColor="@color/QI_main_two_white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView19"
            android:layout_marginTop="15dp"
            android:background="@color/QI_main_two_white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>